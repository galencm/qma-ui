<defaults>
    <default type="call" value="fold-ui">
        <parameter type="arg" value="--size=1500x800"/>
    </default>
    <default type="call" value="dss-ui">
        <parameter type="arg" value=""/>
    </default>
    <!-- use ruling for setsets? -->
    <default type="setset" event="activate" attribute="zoom" value="5">
        <parameter type="condition" attribute="width" comparator="less than" value = "4"/>
